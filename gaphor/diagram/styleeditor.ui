<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="GtkWindow" id="style-editor">
    <property name="title" translatable="yes">Style Editor</property>
    <property name="default-width">600</property>
    <property name="default-height">400</property>
    <child type="titlebar">
      <object class="GtkHeaderBar">
        <property name="decoration-layout">:close</property>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="orientation">horizontal</property>
        <child>
          <object class="GtkLabel">
            <property name="margin-top">20</property>
            <property name="label" translatable="yes">Select a Color:</property>
          </object>
        </child>
        <child>
          <object class="GtkColorButton" id="color-button">
            <property name="title" translatable="yes">Select a Color</property>
            <property name="width-request">50</property>
            <property name="height-request">50</property>
            <property name="margin-start">20</property>
            <property name="margin-end">20</property>
            <property name="margin-top">20</property>
            <property name="margin-bottom">20</property>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
